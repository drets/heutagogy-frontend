{
  "extends": "hardcore-react",
  "plugins": [
    "fp"
  ],
  "parser": "babel-eslint",
  "rules": {
    "no-unused-vars": ["error", {"argsIgnorePattern": "^_"}],
    "linebreak-style": [0, "unix"],
    "no-magic-numbers": 0,
    "fp/no-delete": 2,
    "fp/no-let": 2,
    "fp/no-mutating-assign": 2,
    "fp/no-mutation": ["error", {"allowThis": true, "exceptions": [{"property": "propTypes"}]}]
  },
  "globals": {
    "afterEach": true,
    "beforeEach": true,
    "describe": true,
    "ga": true,
    "it": true,
    "path": true
  }
}
